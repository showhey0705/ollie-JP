{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Beauty",
	"settings": {
		"color": {
			"palette": [
				{
					"name": "Primary",
					"slug": "primary",
					"color": "#527471"
				},
				{
					"name": "Main",
					"slug": "main",
					"color": "#14262C"
				},
				{
					"name": "Secondary",
					"slug": "secondary",
					"color": "#425d5a"
				},
				{
					"name": "Main Accent",
					"slug": "main-accent",
					"color": "#8fafac"
				},
				{
					"name": "Primary Accent",
					"slug": "primary-accent",
					"color": "#bed0cf"
				},
				{
					"name": "Tertiary",
					"slug": "tertiary",
					"color": "#ADB6BA"
				},
				{
					"name": "Border Light",
					"slug": "border-light",
					"color": "#dde1e5"
				},
				{
					"name": "Border Dark",
					"slug": "border-dark",
					"color": "#53737024"
				},
				{
					"name": "Base",
					"slug": "base",
					"color": "#D1D5D0"
				},
				{
					"name": "Light2",
					"slug": "light2",
					"color": "#FAFAFC"
				},
				{
					"name": "Logo",
					"slug": "logo",
					"color": "#F0E3CF"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--logo)"
				},
				"spacing": {
					"padding": {
						"top": ".6em",
						"right": "1em",
						"bottom": ".6em",
						"left": "1em"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-small)",
					"lineHeight": "var(--wp--custom--line-height--body)",
					"fontWeight": "700",
					"letterSpacing": "0.05em"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--main)",
						"text": "var(--wp--preset--color--base)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		}
	}
}
