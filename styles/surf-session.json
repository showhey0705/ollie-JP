{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Surf Session",
	"settings": {
		"color": {
			"palette": [
				{
					"name": "Brand",
					"slug": "primary",
					"color": "#CEF2FF"
				},
				{
					"name": "Primary Accent",
					"slug": "primary-accent",
					"color": "#47CEFF"
				},
				{
					"name": "Brand Alt",
					"slug": "primary-alt",
					"color": "#FFDE0F"
				},
				{
					"name": "Brand Alt Accent",
					"slug": "primary-alt-accent",
					"color": "#4A4526"
				},
				{
					"name": "Contrast",
					"slug": "main",
					"color": "#2A2F2F"
				},
				{
					"name": "Contrast Accent",
					"slug": "main-accent",
					"color": "#0081a8"
				},
				{
					"name": "Base",
					"slug": "base",
					"color": "#FFFFFF"
				},
				{
					"name": "Base Accent",
					"slug": "secondary",
					"color": "#2FDCCB"
				},
				{
					"name": "tint",
					"slug": "tertiary",
					"color": "#ECFBFF"
				},
				{
					"name": "Border Light",
					"slug": "border-light",
					"color": "#CCF3FF"
				},
				{
					"name": "Border Dark",
					"slug": "border-dark",
					"color": "#00627F"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--main)"
				},
				"spacing": {
					"padding": {
						"top": ".6em",
						"right": "1em",
						"bottom": ".6em",
						"left": "1em"
					}
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "var(--wp--custom--line-height--body)",
					"fontWeight": "500",
					"letterSpacing": "0.05em"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--main)",
						"text": "var(--wp--preset--color--base)"
					},
					"typography": {
						"textDecoration": "underline"
					}
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--jp-serif)",
			"fontSize": "var(--wp--preset--font-size--base)",
			"fontWeight": "300",
			"lineHeight": "var(--wp--custom--line-height--loose)",
			"letterSpacing": "0.03em"
		}
	}
}
